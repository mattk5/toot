<div class="header-user">
  <h1>Your profile</h1>
  <div class="profile-links">
    <%= link_to "Edit profile", edit_user_path(@user) %>
    <%= link_to 'Home', root_url %>
    <%= link_to 'Logout', log_out_path, method: :delete %>
  </div>
</div>
<div>
  <ul class="user-info">
    <li><%= @user.username %></li>
    <li><%= @user.email %></li>
    <li><%= @user.name %></li>
  </ul>
</div>
<section class="counts">
  <%= render 'shared/follow_counts' %>
</section>
<div class="user-toots">
  <%= render 'follow_form' if logged_in? %>
  <% if @user.toots.any? %>
    <h3>Your Toots (<%= @user.toots.count %>)</h3>
      <ol>
        <%= render @toots %>
      </ol>
    <%= will_paginate @toots %>
  <% end %>
</div>
