<h1>Log In</h1>

<%= form_for(:session, url: log_in_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span>Remember me:</span>
  <% end %>

  <%= f.submit "Log In" %>
<% end %>

<%= link_to 'Home', root_url %>
